#:kivy 2.1.0

<GraphPeer>:
#:set CENTER 0.5
#:set BACKDROP_ELEVATION 5
#:set GRAPH_PEER_PADDING 25
#:set GRAPH_PEER_SPACING 25
#:set GRAPH_Y_SIZE 0.9
#:set FILTER_PANEL_Y_SIZE 0.1
#:set FILTER_PANEL_X_SIZE 0.3
#:set FILTER_PANEL_SPACING 25



    #Backdrop of the graph peer
    MD3Card:
        elevation: BACKDROP_ELEVATION

        BoxLayout:
            orientation: "vertical"
            padding: GRAPH_PEER_PADDING
            spacing: GRAPH_PEER_SPACING
            
            BoxLayout:
                id: graph
                size_hint_y: GRAPH_Y_SIZE
        
            MDSegmentedControl:
                id: filter_type
                segment_color: app.theme_cls.primary_light
                on_active: root.display_filter_setup()
                pos_hint: {"center_x": CENTER, "center_y": CENTER}

                MDSegmentedControlItem:
                    text: "Cost"

                MDSegmentedControlItem:
                    text: "Cost(Range)"

                MDSegmentedControlItem:
                    text: "Date"
                
                MDSegmentedControlItem:
                    text: "Date(Range)"
                
                MDSegmentedControlItem:
                    text: "Category"
                
                MDSegmentedControlItem:
                    text: "Type"
                    
            BoxLayout:
                id: filter_panel
                orientation: "horizontal"
                size_hint_y: FILTER_PANEL_Y_SIZE
                size_hint_x: FILTER_PANEL_X_SIZE
                pos_hint: {"center_x": CENTER,}
                spacing: FILTER_PANEL_SPACING

                   

        