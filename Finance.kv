<TransactionEntryPanel>:
        

    BoxLayout:
        orientation: "vertical"
        size: 1/4 * root.width,root.height
        pos: 3/4 * root.width, 0
        padding: 20
        spacing: 80

        # TODO change hint_text to a label that appears above the text_input
        # TODO set it up so text changes based on if charge or deposit 
        TextInput:
            hint_text: "Transaction Date"
            halign: "center"
            multinline: False

        TextInput:
            hint_text: "Transaction Type"
            halign: "center"
            multinline: False

        TextInput:
            hint_text: "Transaction Amount"
            halign: "center"
            multinline: False

        TextInput:
            hint_text: "Transaction Description"
            halign: "center"
            multinline: True

        Button:
            text: "press me"

